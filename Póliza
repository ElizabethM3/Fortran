        program poliza
        implicit none
        integer tipo, bebe, edad, lentes, enfermo
        real costom, costol, costot, coston, costos, costoa, costo
        
        print *
        write (*,*) 'Tipo de poliza 1=A y 0=B'
        print *
        read(*,*) tipo
        
        print *
        write (*,*) '�La persona bebe alcohol? 1=si y 0=no'
        print *
        read(*,*) bebe
        
        print *
        write (*,*) '�La persona usa lentes? 1=si y 0=no'
        print *
        read(*,*) lentes
        
        print *
        write (*,*) '�La persona tiene alguna enfermedad? 1=si y 0=no'
        print *
        read(*,*) enfermo
        
        print *
        write (*,*) 'Edad de la persona: '
        print *
        read(*,*) edad
        
        select case (tipo)
               case (1)
                    costo = 1200
               case (2)
                     costo = 950
        end select
        
        if (lentes==1) then
           costos = 0.05*costo
        else
            costos = 0
        end if
        
        if (bebe==1) then
           costom = 0.10*costo
        else
            costom = 0
        end if
        
        if (enfermo==1) then
           costoa = 0.05*costo
        else
            costoa = 0
        end if
        
        if (edad >40) then
           coston = 0.20*costo
        else
            costol = 0.10*costo
        end if
        
        costot = costo + costos + costom + costoa + coston
        
        print *
        write(*,*) 'Costo total: ', costos
        print*
        
        end program poliza
